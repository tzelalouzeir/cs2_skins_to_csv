{
    "manifest_version": 3,
    "name": "CS2 to CSV",
    "version": "1.2",
    "description": "Saves item names as CSV and downloads it",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://steamcommunity.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  
